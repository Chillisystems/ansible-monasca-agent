init_config:
  admin_password: {{ monasca_plugin_nova_password }}
  admin_tenant_name: {{ monasca_plugin_nova_project }}
  admin_user: {{ monasca_plugin_nova_user }}
  cache_dir: /dev/shm
  netserver_ip: {{ groups['neutron-network'][0] }}
  netserver_user: {{ monasca_plugin_libvirt_user }}
  netserver_password: {{ monasca_plugin_libvirt_user_password }}
  identity_uri: {{ monasca_agent_keystone_url }}/v3
  metadata:
    - scale_group
  nova_refresh: 14400
  ping_check: /usr/bin/sudo /sbin/ip netns exec NAMESPACE /bin/ping -n -c1 -w1 -q
  vm_probation: 300
instances: []
