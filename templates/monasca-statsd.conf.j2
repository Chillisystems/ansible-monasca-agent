# Startup script for the Monasca Statsd

description "Monasca Statsd Python app"
start on runlevel [2345]

console log
respawn
respawn limit unlimited

env http_proxy=""
env HTTP_PROXY=""

env https_proxy=""
env HTTPS_PROXY=""

setgid {{ monasca_group }}
setuid root
exec {{ agent_install_dir }}/bin/monasca-statsd

post-stop exec sleep 5
