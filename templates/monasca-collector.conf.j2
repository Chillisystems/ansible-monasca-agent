# Startup script for the Monasca Collector

description "Monasca Collector Python app"
start on runlevel [2345]

console log
respawn
respawn limit unlimited

env http_proxy=""
env HTTP_PROXY=""

env https_proxy=""
env HTTPS_PROXY=""

setgid {{ monasca_group }}
setuid root
exec {{ agent_install_dir }}/bin/monasca-collector foreground

post-stop exec sleep 5
